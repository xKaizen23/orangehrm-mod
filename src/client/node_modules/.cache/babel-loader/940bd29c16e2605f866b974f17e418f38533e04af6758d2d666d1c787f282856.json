{"ast":null,"code":"import { OxdDialog } from '@ohrm/oxd';\nexport default {\n  name: 'SuccessDialog',\n  components: {\n    'simple-dialog': OxdDialog\n  },\n  data() {\n    return {\n      show: false,\n      resolve: null\n    };\n  },\n  methods: {\n    showSuccessDialog() {\n      return new Promise(resolve => {\n        this.resolve = resolve;\n        this.show = true;\n      });\n    },\n    onSuccess() {\n      this.show = false;\n      this.resolve && this.resolve('ok');\n    }\n  }\n};","map":{"version":3,"mappings":"AAoDA,SAAQA,SAAS,QAAO,WAAW;AAEnC,eAAe;EACbC,IAAI,EAAE,eAAe;EACrBC,UAAU,EAAE;IACV,eAAe,EAAEF;EACnB,CAAC;EACDG,IAAI,GAAG;IACL,OAAO;MACLC,IAAI,EAAE,KAAK;MACXC,OAAO,EAAE;IACX,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,iBAAiB,GAAG;MAClB,OAAO,IAAIC,OAAO,CAAEH,OAAO,IAAK;QAC9B,IAAI,CAACA,OAAM,GAAIA,OAAO;QACtB,IAAI,CAACD,IAAG,GAAI,IAAI;MAClB,CAAC,CAAC;IACJ,CAAC;IACDK,SAAS,GAAG;MACV,IAAI,CAACL,IAAG,GAAI,KAAK;MACjB,IAAI,CAACC,OAAM,IAAK,IAAI,CAACA,OAAO,CAAC,IAAI,CAAC;IACpC;EACF;AACF,CAAC","names":["OxdDialog","name","components","data","show","resolve","methods","showSuccessDialog","Promise","onSuccess"],"sourceRoot":"","sources":["C:\\xampp\\htdocs\\orangehrm-5.7\\src\\client\\src\\orangehrmRecruitmentPlugin\\components\\SuccessDialog.vue"],"sourcesContent":["<!--\n/**\n * OrangeHRM is a comprehensive Human Resource Management (HRM) System that captures\n * all the essential functionalities required for any enterprise.\n * Copyright (C) 2006 OrangeHRM Inc., http://www.orangehrm.com\n *\n * OrangeHRM is free software: you can redistribute it and/or modify it under the terms of\n * the GNU General Public License as published by the Free Software Foundation, either\n * version 3 of the License, or (at your option) any later version.\n *\n * OrangeHRM is distributed in the hope that it will be useful, but WITHOUT ANY WARRANTY;\n * without even the implied warranty of MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.\n * See the GNU General Public License for more details.\n *\n * You should have received a copy of the GNU General Public License along with OrangeHRM.\n * If not, see <https://www.gnu.org/licenses/>.\n */\n -->\n\n<template>\n  <teleport to=\"#app\">\n    <simple-dialog\n      v-if=\"show\"\n      :with-close=\"false\"\n      class=\"orangehrm-confirmation-dialog orangehrm-dialog-popup\"\n      @update:show=\"onSuccess\"\n    >\n      <div class=\"orangehrm-modal-header\">\n        <oxd-text type=\"card-title\">\n          {{ $t('recruitment.application_received') }}\n        </oxd-text>\n      </div>\n      <div class=\"orangehrm-text-center-align\">\n        <oxd-text type=\"card-body\">\n          {{\n            $t('recruitment.your_application_has_been_submitted_successfully')\n          }}\n        </oxd-text>\n      </div>\n      <div class=\"orangehrm-modal-footer\">\n        <oxd-button\n          :label=\"$t('general.ok')\"\n          display-type=\"text\"\n          class=\"orangehrm-button-margin\"\n          @click=\"onSuccess\"\n        />\n      </div>\n    </simple-dialog>\n  </teleport>\n</template>\n\n<script>\nimport {OxdDialog} from '@ohrm/oxd';\n\nexport default {\n  name: 'SuccessDialog',\n  components: {\n    'simple-dialog': OxdDialog,\n  },\n  data() {\n    return {\n      show: false,\n      resolve: null,\n    };\n  },\n  methods: {\n    showSuccessDialog() {\n      return new Promise((resolve) => {\n        this.resolve = resolve;\n        this.show = true;\n      });\n    },\n    onSuccess() {\n      this.show = false;\n      this.resolve && this.resolve('ok');\n    },\n  },\n};\n</script>\n\n<style lang=\"scss\" scoped>\n.orangehrm-modal-header {\n  margin-bottom: 1.2rem;\n  display: flex;\n  justify-content: center;\n}\n\n.orangehrm-modal-footer {\n  margin-top: 1.2rem;\n  display: flex;\n  justify-content: center;\n}\n\n.orangehrm-button-margin {\n  margin: 0.25rem;\n}\n\n.orangehrm-text-center-align {\n  text-align: center;\n}\n</style>\n"]},"metadata":{},"sourceType":"module","externalDependencies":[]}