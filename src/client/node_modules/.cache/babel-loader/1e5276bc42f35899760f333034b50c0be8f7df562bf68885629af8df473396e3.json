{"ast":null,"code":"import { computed, ref } from 'vue';\nimport { APIService } from '@/core/util/services/api.service';\nimport { navigate } from '@ohrm/core/util/helper/navigation';\nimport TabsNavigation from '@/orangehrmPimPlugin/components/TabsNavigation';\nimport ProfileAttachments from '@/orangehrmPimPlugin/components/ProfileAttachments';\nimport ProfileCustomFields from '@/orangehrmPimPlugin/components/ProfileCustomFields';\nconst defaultPic = `${window.appGlobal.publicPath}/images/default-photo.png`;\nexport default {\n  name: 'EditEmployeeLayout',\n  components: {\n    'tabs-navigation': TabsNavigation,\n    'profile-attachments': ProfileAttachments,\n    'profile-custom-fields': ProfileCustomFields\n  },\n  props: {\n    employeeId: {\n      type: String,\n      required: true\n    },\n    tabs: {\n      type: Array,\n      required: true\n    },\n    allowedFileTypes: {\n      type: Array,\n      required: true\n    },\n    maxFileSize: {\n      type: Number,\n      required: true\n    },\n    screen: {\n      type: String,\n      default: 'default',\n      validator(value) {\n        return ['default', 'personal', 'contact', 'emergency', 'dependents', 'immigration', 'qualifications', 'tax', 'salary', 'job', 'report-to', 'membership'].includes(value);\n      }\n    }\n  },\n  setup(props) {\n    const employeeName = ref('');\n    const isCurrentEmp = ref(true);\n    const http = new APIService(window.appGlobal.baseUrl, '/api/v2/pim/employees');\n    http.get(props.employeeId).then(({\n      data\n    }) => {\n      employeeName.value = `${data.data.firstName} ${data.data.lastName}`;\n      isCurrentEmp.value = data.data.terminationId ? false : true;\n    });\n    const imgSrc = computed(() => {\n      return props.employeeId ? `${window.appGlobal.baseUrl}/pim/viewPhoto/empNumber/${props.employeeId}` : defaultPic;\n    });\n    const onClickProfilePic = () => {\n      navigate('/pim/viewPhotograph/empNumber/{empNumber}', {\n        empNumber: props.employeeId\n      });\n    };\n    return {\n      imgSrc,\n      employeeName,\n      isCurrentEmp,\n      onClickProfilePic\n    };\n  }\n};","map":{"version":3,"mappings":"AAmEA,SAAQA,QAAQ,EAAEC,GAAG,QAAO,KAAK;AACjC,SAAQC,UAAU,QAAO,kCAAkC;AAC3D,SAAQC,QAAQ,QAAO,mCAAmC;AAC1D,OAAOC,cAAa,MAAO,gDAAgD;AAC3E,OAAOC,kBAAiB,MAAO,oDAAoD;AACnF,OAAOC,mBAAkB,MAAO,qDAAqD;AAErF,MAAMC,UAAS,GAAK,GAAEC,MAAM,CAACC,SAAS,CAACC,UAAW,2BAA0B;AAE5E,eAAe;EACbC,IAAI,EAAE,oBAAoB;EAC1BC,UAAU,EAAE;IACV,iBAAiB,EAAER,cAAc;IACjC,qBAAqB,EAAEC,kBAAkB;IACzC,uBAAuB,EAAEC;EAC3B,CAAC;EACDO,KAAK,EAAE;IACLC,UAAU,EAAE;MACVC,IAAI,EAAEC,MAAM;MACZC,QAAQ,EAAE;IACZ,CAAC;IACDC,IAAI,EAAE;MACJH,IAAI,EAAEI,KAAK;MACXF,QAAQ,EAAE;IACZ,CAAC;IACDG,gBAAgB,EAAE;MAChBL,IAAI,EAAEI,KAAK;MACXF,QAAQ,EAAE;IACZ,CAAC;IACDI,WAAW,EAAE;MACXN,IAAI,EAAEO,MAAM;MACZL,QAAQ,EAAE;IACZ,CAAC;IACDM,MAAM,EAAE;MACNR,IAAI,EAAEC,MAAM;MACZQ,OAAO,EAAE,SAAS;MAClBC,SAAS,CAACC,KAAK,EAAE;QACf,OAAO,CACL,SAAS,EACT,UAAU,EACV,SAAS,EACT,WAAW,EACX,YAAY,EACZ,aAAa,EACb,gBAAgB,EAChB,KAAK,EACL,QAAQ,EACR,KAAK,EACL,WAAW,EACX,YAAY,CACb,CAACC,QAAQ,CAACD,KAAK,CAAC;MACnB;IACF;EACF,CAAC;EACDE,KAAK,CAACf,KAAK,EAAE;IACX,MAAMgB,YAAW,GAAI5B,GAAG,CAAC,EAAE,CAAC;IAC5B,MAAM6B,YAAW,GAAI7B,GAAG,CAAC,IAAI,CAAC;IAC9B,MAAM8B,IAAG,GAAI,IAAI7B,UAAU,CACzBM,MAAM,CAACC,SAAS,CAACuB,OAAO,EACxB,uBAAuB,CACxB;IAEDD,IAAI,CAACE,GAAG,CAACpB,KAAK,CAACC,UAAU,CAAC,CAACoB,IAAI,CAAC,CAAC;MAACC;IAAI,CAAC,KAAK;MAC1CN,YAAY,CAACH,KAAI,GAAK,GAAES,IAAI,CAACA,IAAI,CAACC,SAAS,IAAID,IAAI,CAACA,IAAI,CAACE,QAAS,EAAC;MACnEP,YAAY,CAACJ,KAAI,GAAIS,IAAI,CAACA,IAAI,CAACG,aAAY,GAAI,KAAI,GAAI,IAAI;IAC7D,CAAC,CAAC;IAEF,MAAMC,MAAK,GAAIvC,QAAQ,CAAC,MAAM;MAC5B,OAAOa,KAAK,CAACC,UAAS,GACjB,GAAEN,MAAM,CAACC,SAAS,CAACuB,OAAQ,4BAA2BnB,KAAK,CAACC,UAAW,KACxEP,UAAU;IAChB,CAAC,CAAC;IAEF,MAAMiC,iBAAgB,GAAI,MAAM;MAC9BrC,QAAQ,CAAC,2CAA2C,EAAE;QACpDsC,SAAS,EAAE5B,KAAK,CAACC;MACnB,CAAC,CAAC;IACJ,CAAC;IAED,OAAO;MACLyB,MAAM;MACNV,YAAY;MACZC,YAAY;MACZU;IACF,CAAC;EACH;AACF,CAAC","names":["computed","ref","APIService","navigate","TabsNavigatio