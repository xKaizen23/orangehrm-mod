{"ast":null,"code":"import { APIService } from '@/core/util/services/api.service';\nimport { OxdDialog, OxdIcon } from '@ohrm/oxd';\nexport default {\n  name: 'EmployeesOnLeaveConfigModal',\n  components: {\n    'oxd-icon': OxdIcon,\n    'oxd-dialog': OxdDialog\n  },\n  emits: ['close'],\n  setup() {\n    const http = new APIService(window.appGlobal.baseUrl, '/api/v2/dashboard/config/employee-on-leave-today');\n    return {\n      http\n    };\n  },\n  data() {\n    return {\n      isLoading: false,\n      showAccessibleEmployeesOnly: false\n    };\n  },\n  beforeMount() {\n    this.isLoading = true;\n    this.http.getAll().then(response => {\n      const {\n        data\n      } = response.data;\n      this.showAccessibleEmployeesOnly = data.showOnlyAccessibleEmployeesOnLeaveToday;\n    }).finally(() => this.isLoading = false);\n  },\n  methods: {\n    onSave() {\n      this.isLoading = true;\n      this.http.request({\n        method: 'PUT',\n        data: {\n          showOnlyAccessibleEmployeesOnLeaveToday: this.showAccessibleEmployeesOnly\n        }\n      }).then(() => {\n        this.$toast.updateSuccess();\n        this.onCancel();\n      });\n    },\n    onCancel() {\n      this.$emit('close', true);\n    }\n  }\n};","map":{"version":3,"mappings":"AA4DA,SAAQA,UAAU,QAAO,kCAAkC;AAC3D,SAAQC,SAAS,EAAEC,OAAO,QAAO,WAAW;AAE5C,eAAe;EACbC,IAAI,EAAE,6BAA6B;EACnCC,UAAU,EAAE;IACV,UAAU,EAAEF,OAAO;IACnB,YAAY,EAAED;EAChB,CAAC;EACDI,KAAK,EAAE,CAAC,OAAO,CAAC;EAChBC,KAAK,GAAG;IACN,MAAMC,IAAG,GAAI,IAAIP,UAAU,CACzBQ,MAAM,CAACC,SAAS,CAACC,OAAO,EACxB,kDAAkD,CACnD;IACD,OAAO;MACLH;IACF,CAAC;EACH,CAAC;EACDI,IAAI,GAAG;IACL,OAAO;MACLC,SAAS,EAAE,KAAK;MAChBC,2BAA2B,EAAE;IAC/B,CAAC;EACH,CAAC;EACDC,WAAW,GAAG;IACZ,IAAI,CAACF,SAAQ,GAAI,IAAI;IACrB,IAAI,CAACL,IAAG,CACLQ,MAAM,EAAC,CACPC,IAAI,CAAEC,QAAQ,IAAK;MAClB,MAAM;QAACN;MAAI,IAAIM,QAAQ,CAACN,IAAI;MAC5B,IAAI,CAACE,2BAA0B,GAC7BF,IAAI,CAACO,uCAAuC;IAChD,CAAC,EACAC,OAAO,CAAC,MAAO,IAAI,CAACP,SAAQ,GAAI,KAAM,CAAC;EAC5C,CAAC;EACDQ,OAAO,EAAE;IACPC